<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yaki.mypetbook2.map.MainActivity">

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    app:srcCompat="@drawable/logo"
    android:layout_gravity="center"
    android:id="@+id/logo"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp" />

<Button
    android:text="@string/lost_pet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lostPetBtn"
    android:background="#605B61"
    android:textColor="#ffff"
    android:layout_above="@+id/adoptionBtn"
    android:layout_alignLeft="@+id/logo"
    android:layout_alignStart="@+id/logo"
    android:layout_marginBottom="23dp" />

<Button
    android:text="@string/vaccine"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#605B61"
    android:textColor="#ffff"
    android:id="@+id/vaccineBtn"
    android:layout_alignBaseline="@+id/lostPetBtn"
    android:layout_alignBottom="@+id/lostPetBtn"
    android:layout_alignRight="@+id/logo"
    android:layout_alignEnd="@+id/logo" />

<Button
    android:text="@string/businesses"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/businessesBtn"
    android:background="#605B61"
    android:textColor="#ffff"
    android:layout_alignParentBottom="true"
    android:layout_alignLeft="@+id/vaccineBtn"
    android:layout_alignStart="@+id/vaccineBtn"
    android:layout_marginBottom="10dp" />

<Button
    android:text="@string/adoption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#605B61"
    android:textColor="#ffff"
    android:id="@+id/adoptionBtn"
    android:layout_alignBaseline="@+id/businessesBtn"
    android:layout_alignBottom="@+id/businessesBtn"
    android:layout_alignLeft="@+id/lostPetBtn"
    android:layout_alignStart="@+id/lostPetBtn" />


</RelativeLayout>
